{
	"name": "@apps/discord-bot",
	"version": "0.1.0",
	"homepage": "https://github.com/INeedJobToStartWork/discord-bot",
	"bugs": "https://github.com/INeedJobToStartWork/discord-bot/issues/new/choose",
	"repository": {
		"type": "git",
		"url": "https://github.com/INeedJobToStartWork/discord-bot",
		"directory": "apps/discord-bot"
	},
	"license": "MIT",
	"author": "ineedjobtostartwork",
	"type": "module",
	"main": "index.js",
	"scripts": {
		"------------------------INSTALLATION------------------------": "",
		"prepare": "ts-patch install && typia patch",
		"------------------------UTILS------------------------": "",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"format": "pnpm prettier . --write && pnpm prettier . --check",
		"------------------------BUILDS------------------------": "",
		"build:dev": "pnpm tsup --config ./config/tsuprc/tsup.dev.ts",
		"build:prod": "pnpm tsup --config ./config/tsuprc/tsup.prod.ts",
		"------------------------DEPLOYS------------------------": "",
		"commands:dev": "node lib/scripts/register-commands.js",
		"commands:prod": "node dist/index.js",
		"start:prod": "node dist/index.js",
		"start:dev": "node lib/index.js",
		"------------------------TESTS------------------------": "",
		"test": "echo \"Error: no test specified\""
	},
	"lint-staged": {
		"*": [
			"git add .",
			"pnpm format",
			"pnpm lint:fix",
			"pnpm lint"
		]
	},
	"dependencies": {
		"@discordjs/builders": "^1.10.1",
		"@discordjs/rest": "^2.4.3",
		"commander": "^12.1.0",
		"discord-api-types": "^0.37.119",
		"discord.js": "^14.18.0",
		"dotenv": "^16.4.7",
		"oh-my-error": "2.0.1",
		"typia": "6.12.2"
	},
	"devDependencies": {
		"@ineedj/eslintrc": "^1.2.3",
		"@ineedj/prettierrc": "^2.0.0",
		"@ineedj/tsconfig": "^1.0.0",
		"@ryoppippi/unplugin-typia": "1.0.7",
		"@types/node": "^22.13.10",
		"esbuild": "^0.24.2",
		"esbuild-plugin-copy": "^2.1.1",
		"eslint": "^8.57.1",
		"lint-staged": "^15.4.3",
		"prettier": "^3.5.3",
		"ts-patch": "^3.3.0",
		"tsup": "^8.4.0",
		"typescript": "^5.8.2"
	},
	"packageManager": "pnpm@9.14.2",
	"engines": {
		"node": ">=20"
	}
}
