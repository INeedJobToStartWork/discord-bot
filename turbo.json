{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "preinstall": {
      "cache": false
    },
    "prepare": {
      "cache": false
    },
    "pre": {
      "cache": false
    },
    "lint": {
      "outputs": []
    },
    "lint:fix": {
      "dependsOn": ["lint"],
      "outputs": []
    },
    "lint:next": {
      "dependsOn": ["lint"],
      "outputs": []
    },
    "lint:test": {
      "dependsOn": ["lint"],
      "outputs": []
    },
    "format": {
      "outputs": []
    },
    "clean": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "lib/**"]
    },
    "build:dev": {
      "dependsOn": ["^build"],
      "outputs": ["lib/**"]
    },
    "build:prod": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "build:npm": {
      "dependsOn": ["^build"],
      "inputs": ["*", "!dist"],
      "outputs": ["dist/**"]
    },
    "start:dev": {
      "dependsOn": ["build:dev"],
      "cache": false
    },
    "start:prod": {
      "dependsOn": ["build"],
      "cache": false
    },
    "npm:prepack": {
      "dependsOn": ["build"]
    },
    "npm:postpack": {
      "dependsOn": ["build"]
    },
    "npm:version": {
      "cache": false
    },
    "npm:publish": {
      "cache": false
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": []
    },
    "link-cli": {
      "cache": false
    },
    "link-cli:dev": {
      "cache": false
    },
    "unlink-cli:dev": {
      "cache": false
    },
    "commands:dev": {
      "cache": false
    },
    "commands:prod": {
      "cache": false
    }
  }
}
